<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.johnyu.mapper.BookMapper">
    <insert id="addBook" parameterType="Book" useGeneratedKeys="true"
            keyProperty="id">
        insert into books (name) values(#{name})
    </insert>
    <select id="loadBook" resultType="Book">
        select id,name from books where id=#{id}
    </select>
</mapper>